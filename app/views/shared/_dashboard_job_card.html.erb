<div class="job-card">
  <%= link_to job_path(job), style: 'text-decoration: none; color: black;' do %>
    <div class="card-top">
      <%= image_tag(job.photos.present? ? job.photos[0] : 'empty_image_placeholder.png', class: 'job-card-img', alt: 'Job Image') %>
    </div>
    <div class="card-bottom" style="text-align: left;">
      <h3><%= job.title %></h3>
      <p class="scroll"><%= job.description %></p>
      <p><%= job.address %></p>
      <p><strong>$</strong> <%= job.price %></p>
    </div>
    <div class="user-info">
      <%# additional user info if needed %>
    </div>
  <% end %>
</div>
